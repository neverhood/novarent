<%= page_header t('.header') %>
<%= render 'admin_navigation' %>

<%= link_to t('.new_ad'), new_ad_path %>

<div id='ads-index'>

  <% @ads.each do |ad| %>
    <%= link_to ad_path(ad) do %>
      <div class='ad'>
        <%= image_tag ad.photo.url(:wide) %>

        <div class='ad-text'>
          <%= ad.body.html_safe %>
        </div>
      </div>
      <hr />
    <% end %>
  <% end %>

</div>
