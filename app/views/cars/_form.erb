
<%= simple_form_for @car, html: { multipart: true, class: 'form form-horizontal' } do |form| %>
  <%= form.input :manufacturer %>
  <%= form.input :name %>
  <%= form.input :engine %>
  <%= form.input :conditioner %>
  <%= form.input :leather %>
  <%= form.input :number_of_passengers %>
  <%= form.input :number_of_doors %>
  <%= form.input :transmission, :as => :select, :collection => @car.transmission_selection_options, :selected => @car.read_attribute(:transmission),
    :prompt => t('common.please_select') %>

  <%- if @car.photo? %>
    <%= image_tag @car.photo.url(:medium) %>
  <%- end %>
  <%= form.input :photo, :as => :file %>

  <%= form.submit t('common.submit'), disable_with: t('common.please_wait') %>

<% end %>
