<div class='car-specs pull-left'>
  <div class='car-name alert alert-info'> <%= car.full_name %> <span class='car-toggle-info'> <%= t('common.info') %>* </span> </div>
  <%- if car.photo? %>
    <div class='photo-and-specs'>
      <div class='car-short-specs hidden'>
        <div class='car-specs-row'>
          <strong> <%= t('activerecord.attributes.car.conditioner') %>: </strong> <span class='badge badge-info'> <%= car.conditioner?? '+' : '-' %> </span>
        </div>
        <hr />
        <div class='car-specs-row'>
          <strong> <%= t('activerecord.attributes.car.leather') %>: </strong> <span class='badge badge-info'><%= car.leather?? '+' : '-' %></span>
        </div>
        <hr />
        <div class='car-specs-row'>
          <strong> <%= t('activerecord.attributes.car.number_of_passengers') %>: </strong> <span class='badge badge-info'><%= car.number_of_passengers %></span>
        </div>
        <hr />
        <div class='car-specs-row'>
          <strong> <%= t('activerecord.attributes.car.number_of_doors') %>: </strong> <span class='badge badge-info'><%= car.number_of_doors %></span>
        </div>
        <hr />
        <div class='car-specs-row'>
          <strong> <%= t('activerecord.attributes.car.transmission') %>: </strong> <span class='badge badge-info'><%= t 'cars.transmissions.' + car.transmission %></span>
        </div>
        <div class='car-specs-row'>
          <strong> <%= t('activerecord.attributes.rent.cost') %>: </strong> <span class='badge badge-important'><%= car.rent.day %>$</span>
        </div>
        <div class='car-specs-row'>
          <strong> <%= t('activerecord.attributes.car.engine') %>: </strong> <span class='badge badge-info'><%= car.engine %></span>
        </div>
      </div>

      <div class='car-photo'><%= image_tag car.photo.url(:medium) %></div>
    </div>
  <%- end %>
  <div class='book-car'><%= link_to t('rents.new_request'), new_rent_request_path(car_id: car.id, type: 'rent'), class: 'btn btn-success' %></div>
  <hr />

  <div class='car-prices'>
      <div class='car-specs-row'>
        <strong> <%= t('activerecord.attributes.rent.one_to_two') %>: </strong> <span class='badge badge-info'><%= car.rent.one_to_two %>$</span>
      </div>
      <div class='car-specs-row'>
        <strong> <%= t('activerecord.attributes.rent.three_to_five') %>: </strong> <span class='badge badge-info'> <%= car.rent.three_to_five %>$</span>
      </div>
      <div class='car-specs-row'>
        <strong> <%= t('activerecord.attributes.rent.six_to_twelve') %>: </strong> <span class='badge badge-info'> <%= car.rent.six_to_twelve %>$</span>
      </div>
      <div class='car-specs-row'>
        <strong> <%= t('activerecord.attributes.rent.thirteen_to_twenty_four') %>: </strong> <span class='badge badge-info'><%= car.rent.thirteen_to_twenty_four %>$</span>
      </div>
      <div class='car-specs-row'>
        <strong> <%= t('activerecord.attributes.rent.month') %>: </strong> <span class='badge badge-info'><%= car.rent.month %>$</span>
      </div>
      <div class='car-specs-row'>
        <strong> <%= t('activerecord.attributes.rent.bail') %>: </strong> <span class='badge badge-important'><%= car.rent.bail %>$</span>
      </div>
  </div>


</div>
